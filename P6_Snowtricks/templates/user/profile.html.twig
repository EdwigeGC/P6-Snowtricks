{% extends 'base.html.twig' %}

{% block title %}Account user{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="h3 mb-3 fw-normal">Change information into your account</h1>

        {{ form_start(form) }}

        {{ form_row(form.lastName) }}
        {{ form_row(form.firstName) }}
        <div>
            <a href="{{ path('password_process', {'user':app.user.id}) }}">Update your password</a>
        </div>

        {% if user.photo is not null %}
        <div>
            <img src="{{ asset('uploads/profile/'~ user.photo)}}" class="img-thumbnail" alt="profile picture">
        </div>
        {% endif %}
        {{ form_row(form.file) }}

        <button class="btn btn-primary" type="submit">Validate</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
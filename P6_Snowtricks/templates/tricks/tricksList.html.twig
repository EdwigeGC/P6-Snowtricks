{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}
<div class="container">
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Snowtricks</h1>
        <p class="lead">Join community of Snowtricks</p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="tricks">
        {% for trick in tricks %}
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="auto" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
              <h2><a href="/trick/details/{{ trick.id }}">{{ trick.name }}</h2>
                {% if app.user %}
                  <a href="{{ path('edit_trick', {'id': trick.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                  <a href="{{ path('delete_trick', {'id': trick.id}) }}" onclick="return confirm('Do you really want to delete this trick?')"><i class="fas fa-trash-alt"></i></a>
                {% endif %} 
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
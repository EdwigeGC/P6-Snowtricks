<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <script src="https://kit.fontawesome.com/262af37180.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link href="{{ asset('style.css') }}" rel="stylesheet"/>
        <script
        src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="
        crossorigin="anonymous"></script>
    </head>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('images/logo-snowtricks.png') }}" alt="logo"/></a>
                <div class="collapse navbar-collapse ml-auto">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home#tricks">Tricks list</a>
                        </li>

                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('add_trick') }}">Add a new trick</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('account_profile') }}">My account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_logout') }}">Logout</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_login') }}">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_registration') }}">Sign up</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section class= "message">
        {% for label, messages in app.flashes %}
            <div class= "container">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                </div>
            </div>
                    {% endfor %}
        {% endfor %}
    </section>

    <body>
        {% block body %}{% endblock %}
        {% block javascripts %} {% endblock %}
    </body>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="text-muted">Snowtricks copyright@EdwigeGC</p>
        </div>
    </footer>

</html>
